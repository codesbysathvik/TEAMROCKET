{
  "manifest_version": 3,
  "name": "PhishShield â€” TeamRocket",
  "version": "1.0",
  "description": "AI-powered phishing detector.",
  "permissions": [
    "tabs",
    "activeTab",
    "notifications",
    "scripting"
  ],
  "host_permissions": ["<all_urls>"],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "web_accessible_resources": [{
    "resources": ["block.html", "block.css"],
    "matches": ["<all_urls>"]
  }]
}
